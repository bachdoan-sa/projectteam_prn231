@page
@model WebAppRazorpage.Pages.ProductOwner.OrchidListModel
@{
    Layout = "_ProductOwnerLayout";
    var list = Model.ListOrchid;
}


    <div class="section trending">
        <div class="container">


            <div class="row">
                <div class="col-lg-12">
                    <h3>Thông tin hoa của bạn</h3>
                </div>
            </div>


            <div class="row trending-box">
                  @foreach (var orchid in list)
                { 
                  


                <div class="col-lg-3 col-md-6 align-self-center mb-30 trending-items col-md-6">
                    <div class="item">
                        <div class="thumb">
                            <a><img src="~/images/hoa.jpeg" alt=""></a>
                        </div>
                        <div class="down-content">                           
                            <h4>@orchid.Name</h4>
                            
                            <a href="/AuctionEvent?id=@orchid.Id"><i class="fa ">Chọn</i></a>
                        </div>
                    </div>
                </div>
                  } 
            </div>

        </div>


    </div>

    </div>




