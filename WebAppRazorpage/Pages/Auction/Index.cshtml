@page
@model WebAppRazorpage.Pages.Auction.IndexModel
@{
    Layout = "_Layout";
    var listAuction = Model.ListAuction;
}
<div class="wrapper blog-wrapper">

    <section class="blog-area two">
        <div class="container d-flex justify-content-center">
            <div class="container__blog">
                <div class="row">
                    <div class="col-md-8 all-posts-wrap col-sm-12">
                        @if (listAuction.Count < 1)
                        {
                            <p>Rỗng rồi bạn ơi, không có data bạn ơi</p>
                        }
                        else
                        {
                            @foreach (var item in listAuction)
                            {
                                <div class="blog-posts">
                                    <a href="~/Auction/AuctionDetail/@item.Id">
                                        <div class="blog-post-thumb" itemscope itemtype="http://schema.org/Blog">
                                            @*<img style="width: 100%" src="@item.Cover_Image" alt="BSmart blog; @item.Title"
                                    class="img-fluid" itemprop="image" />*@
                                            <meta itemprop="name" content="@item.AuctionStatus" />

                                            <div itemprop="publisher" itemscope itemtype="http://schema.org/Organization">
                                                <meta itemprop="name" content="@item.BeginDateTime" />
                                            </div>
                                            <div itemprop="author" itemscope itemtype="http://schema.org/Person">
                                                <meta itemprop="name" content="@item.EndDateTime" />
                                            </div>
                                            <div itemprop="blogPost" itemscope itemtype="http://schema.org/BlogPosting">
                                                <meta itemprop="headline" content="@item.AuctionStatus" />
                                                <div itemprop="author" itemscope itemtype="http://schema.org/Person">
                                                    <meta itemprop="name" content="@item.StaffId" />
                                                </div>
                                                <meta itemprop="datePublished" content="@item.CreatedTime" />
                                            </div>
                                        </div>
                                    </a>
                                    <div class="blog-posts-meta mt-3">
                                        <ul>
                                            <li><i class="fa fa-user"></i><a href="#" style="pointer-events: none;">BSmart</a></li>
                                            <li>
                                                <i class="fa fa-calendar"></i><a href="#" style="pointer-events: none;">@item.CreatedTime.ToString("MMMM dd, yyyy - HH:mm")</a>
                                            </li>
                                            @*<li>
                                    <i class="fa fa-tags"></i><a href="~/blog/index/@item.BlogCategory.SlugBlogCategory">@item.BlogCategory.CategoryName</a>
                                    </li>*@
                                        </ul>
                                    </div>
                                    <h3>
                                        <a href="~/blog/slug/@item.Id">@item.AuctionStatus</a>
                                    </h3>
                                    <div class="entry-content">
                                        @*<p>
                                @item.Content
                                </p>*@
                                        <div>
                                            <a href="~/blog/slug/@item.Id" class="btn btn-primary-custom p-2">Đọc thêm</a>
                                        </div>
                                    </div>
                                    <hr />
                                </div>

                            }
                        }
                        @*<div class="blog-pagination text-center">

                        @if (Model.TotalPages > 1)
                        {
                        <ul>
                        @if (Model.PageNumber != 1)
                        {
                        <li>
                        <a href="~/blog/index/@cateSlug?pg=@(Model.PageNumber-1)&titleBlog=@titleBlog"><i class="fa fa-angle-left"></i></a>
                        </li>
                        }

                        @for (var pge = startPg; pge <= endPg; pge++)
                        {
                        <li>
                        <a href="~/blog/index/@cateSlug?pg=@pge&titleBlog=@titleBlog" class=" @(pge ==Model.PageNumber? "active" :"") ">@pge</a>
                        </li>
                        }

                        @if (Model.PageNumber != Model.TotalPages)
                        {
                        <li>
                        <a href="~/blog/index/@cateSlug?pg=@(Model.PageNumber+1)&titleBlog=@titleBlog"><i class="fa fa-angle-right"></i></a>
                        </li>
                        }


                        </ul>
                        }
                        </div>*@
                    </div>
                    @*<!--start sidebar-->
                    <div class="col-md-4 col-sm-12">
                    <div class="blog-sidebar">

                    <div class="search-form widget">
                    <form>
                    <input type="text"
                    placeholder="Tìm kiếm bài viết..."
                    class="form-control" name="titleBlog" />
                    <button type="submit" formaction="/blog/index/@cateSlug">
                    <i class="fa fa-search" style="right: 21px!important; top: 15px !important; position: absolute;"></i>
                    </button>
                    </form>
                    </div>

                    <div class="latest-post widget">
                    <h4>Bài viết gần đây</h4>
                    @{
                    var count = 0;
                    foreach (var item in newBlog)
                    {
                    <!--start recent post single-->
                    <div class="recent-post-single">
                    <div class="recent-post-cont two">
                    <h6>
                    <a class="recent-news-title" style="line-height: initial;" href="~/blog/slug/@item.Slug">@item.Title</a>
                    </h6>
                    <p class="recent-post-date mt-2">@item.Created.ToString("dd/M/yyyy - HH:mm")</p>
                    </div>
                    </div>

                    count++;
                    if (count == 4) break;
                    <br />
                    }
                    }



                    <!--end recent post single-->
                    </div>
