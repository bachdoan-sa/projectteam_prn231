@page
@model WebAppRazorpage.Pages.Auction.AuctionsModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Page Title</title>
    <link rel="stylesheet" href="~/css/ProductSellPage.css">

</head>
<body>

    <div class="section trending">
        <div class="container">


            <div class="row">
                <div class="col-lg-12">
                    <h3>Live</h3>
                </div>
            </div>


            <div class="row trending-box">
                 @foreach (var product in Model.ListStateAuction)
                {
                <div class="col-lg-3 col-md-6 align-self-center mb-30 trending-items col-md-6">
                    <div class="item">
                        <div class="thumb">
                            <a href="/Auction/OrchidAuctionDetail"><img src="~/images/hoa.jpeg" alt=""></a>
                        </div>
                        <div class="down-content">
                            <span class="category">starting price:</span>
                                <span>@product.StartingPrice</span>
                                <h4>@product.Orchid.Name</h4>
                                <span>time of existence:</span>
                                <span id="countdown"></span>

                                <a href="/Auction/OrchidAuctionDetail"><i class="fa ">Join</i></a>
                        </div>
                    </div>
                </div>
                 }
            </div>

        </div>


        <div class="row">
            <div class="col-lg-12">
                <h3>End</h3>
            </div>
        </div>


        <div class="row trending-box">
