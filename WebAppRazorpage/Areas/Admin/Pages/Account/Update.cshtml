@page "{id}"
@model WebAppRazorpage.Pages.Areas.Admin.Account.UpdateModel
@{
    Layout = "_AdminLayout";
}
<h1>Update Account</h1>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Username">Username:</label>
        <input type="text" class="form-control" id="Username" asp-for="Username">
    </div>
    <div class="form-group">
        <label for="Password">Password:</label>
        <input type="password" class="form-control" id="Password" asp-for="Password">
    </div>
    <div class="form-group">
        <label for="Email">Email:</label>
        <input type="email" class="form-control" id="Email" asp-for="Email">
    </div>
    <div class="form-group">
        <label for="Phone">Phone:</label>
        <input type="text" class="form-control" id="Phone" asp-for="Phone">
    </div>
    <div class="form-group">
        <label for="Address">Address:</label>
        <input type="text" class="form-control" id="Address" asp-for="Address">
    </div>
    <div class="form-group">
        <label for="Birthday">Birthday:</label>
        <input type="date" class="form-control" id="Birthday" asp-for="Birthday">
    </div>
    <div class="form-group">
        <label for="RoleId">Role ID:</label>
        <input type="text" class="form-control" id="RoleId" asp-for="RoleId">
    </div>
    <button type="submit" class="btn btn-primary">Update Account</button>
</form>